RUN git clone https://${GIT_USER}:${GIT_ACCESS_KEY}@github.com/dnfwlxo11/flask_classification_sampleServer.git .

COPY ./app /app

EXPOSE 5000

RUN pip3 install -r server/requirements.txt

ENTRYPOINT ["./entrypoint.sh"]