FROM ubuntu:20.04

ENV GIT_USER=dnfwlxo11
ENV GIT_ACCESS_KEY=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

RUN apt-get update
RUN apt-get install -y python3 python3-pip python3-dev build-essential

RUN apt-get install git -y

